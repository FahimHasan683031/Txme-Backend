{
    "info": {
        "_postman_id": "7f8b9c2a-1d4e-4b3a-96e5-4f2a3b4c5d6e",
        "name": "Txme-Backend Setting & AuditLog",
        "description": "Postman collection for testing Setting and AuditLog modules in Txme-Backend.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Setting",
            "item": [
                {
                    "name": "Get Setting",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/setting",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "setting"
                            ]
                        },
                        "description": "Retrieve system-wide settings. Requires Admin/Super Admin role."
                    },
                    "response": []
                },
                {
                    "name": "Update Setting",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"profilePromotion\": {\n        \"enabled\": true,\n        \"adminControlled\": true\n    },\n    \"cardPayment\": {\n        \"enabled\": true,\n        \"adminControlled\": true\n    },\n    \"digitalPayments\": {\n        \"paymentByWallet\": {\n            \"enabled\": true,\n            \"walletFeatures\": {\n                \"topUp\": { \"enabled\": true },\n                \"withdraw\": { \"enabled\": true }\n            }\n        }\n    }\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/setting",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "setting"
                            ]
                        },
                        "description": "Update system settings. Automatically generates an Audit Log entry. Requires Admin/Super Admin."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Audit Log",
            "item": [
                {
                    "name": "Get Audit Logs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{superAdminToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/audit-log?limit=10&page=1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "audit-log"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        },
                        "description": "Fetch audit logs. Supports pagination and filtering. Requires Super Admin/Admin."
                    },
                    "response": []
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1",
            "type": "string"
        },
        {
            "key": "adminToken",
            "value": "Bearer YOUR_ADMIN_TOKEN_HERE",
            "type": "string"
        },
        {
            "key": "superAdminToken",
            "value": "Bearer YOUR_SUPER_ADMIN_TOKEN_HERE",
            "type": "string"
        }
    ]
}