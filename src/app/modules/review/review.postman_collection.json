{
    "info": {
        "name": "Review API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000"
        },
        {
            "key": "authToken",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Create Review",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"reviewee\": \"\",\n  \"service\": \"\",\n  \"rating\": 5,\n  \"comment\": \"Great service!\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/review",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "review"
                    ]
                }
            }
        },
        {
            "name": "Get My Reviews",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/review/my-reviews?page=1&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "review",
                        "my-reviews"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            }
        },
        {
            "name": "Update Review",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Updated review\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/review/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "review",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            }
        },
        {
            "name": "Delete Review",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/review/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "review",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            }
        }
    ]
}