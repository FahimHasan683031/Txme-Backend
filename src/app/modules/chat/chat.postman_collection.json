{
    "info": {
        "name": "Chat API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000"
        },
        {
            "key": "authToken",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Create Chat",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"participant\": \"\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/chat",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "chat"
                    ]
                }
            }
        },
        {
            "name": "Create Admin Support",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/chat/admin-support",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "chat",
                        "admin-support"
                    ]
                }
            }
        },
        {
            "name": "Get Chats",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/chat",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "chat"
                    ]
                }
            }
        },
        {
            "name": "Get Admin Support Chats",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/chat/admin-support/all",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "chat",
                        "admin-support",
                        "all"
                    ]
                }
            }
        },
        {
            "name": "Delete Chat",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/chat/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "chat",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            }
        }
    ]
}