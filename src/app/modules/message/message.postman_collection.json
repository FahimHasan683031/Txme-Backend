{
    "info": {
        "name": "Message API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000"
        },
        {
            "key": "authToken",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Send Message",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "chatId",
                            "value": "",
                            "type": "text"
                        },
                        {
                            "key": "text",
                            "value": "Hello!",
                            "type": "text"
                        },
                        {
                            "key": "type",
                            "value": "TEXT",
                            "type": "text"
                        },
                        {
                            "key": "image",
                            "type": "file",
                            "src": []
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/api/message",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "message"
                    ]
                }
            }
        },
        {
            "name": "Get Messages",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/message/:id?page=1&limit=50",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "message",
                        ":id"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "50"
                        }
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            }
        },
        {
            "name": "Mark as Read",
            "request": {
                "method": "PATCH",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/message/mark-read/:chatId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "message",
                        "mark-read",
                        ":chatId"
                    ],
                    "variable": [
                        {
                            "key": "chatId",
                            "value": ""
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Unread Count",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/message/unread/count",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "message",
                        "unread",
                        "count"
                    ]
                }
            }
        }
    ]
}